[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "An RSF workflow project"
requires-python = ">=3.12"
dependencies = [
    "rsf>=0.1.0",
    "pyyaml>=6.0",
]

[project.optional-dependencies]
dev = [
    "pytest>=7.0",
    "rsf[dev]",
]

[tool.hatch.build.targets.wheel]
packages = ["handlers"]

[tool.pytest.ini_options]
testpaths = ["tests"]

[tool.ruff]
target-version = "py312"
